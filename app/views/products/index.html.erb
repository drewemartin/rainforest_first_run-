<h1>Products#index</h1>
<p>Find me in app/views/products/index.html.erb</p>

<% @products.each do |product| %>
	<p><%= product.name %></p>
	<p><%= product.description %></p>
	<p>$<%= product.price_in_cents.to_f / 100 %>0</p>
	<%= link_to 'View Product', product_path(product.id) %>
<% end %>

